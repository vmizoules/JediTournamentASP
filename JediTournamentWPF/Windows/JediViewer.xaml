<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JediTournamentWPF.Windows"
        xmlns:JediTournamentWPF="clr-namespace:JediTournamentWPF" x:Class="JediTournamentWPF.Windows.JediViewer"
        ResizeMode="NoResize"  
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Visualisateur de Jedi" Height="240" Width="310" Icon="{StaticResource AppIcon}" Loaded="Window_Loaded">
    <Window.Background>
        <ImageBrush ImageSource="{StaticResource MainBackground}"/>
    </Window.Background>
    <Grid>
        <JediTournamentWPF:CtrlJedi x:Name="jediController" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300"/>
    </Grid>
</Window>
