<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JediTournamentWPF.Windows"
        ResizeMode="NoResize"  
        WindowStartupLocation="CenterScreen"
        xmlns:JediTournamentWPF="clr-namespace:JediTournamentWPF" x:Class="JediTournamentWPF.Windows.JedisViewer"
        mc:Ignorable="d"
        Title="Gestionnaire des Jedis" Height="535" Width="376" Icon="{StaticResource AppIcon}" Loaded="Window_Loaded" Closed="Window_Closed">
    <Window.Background>
        <ImageBrush ImageSource="{StaticResource MainBackground}"/>
    </Window.Background>
    <Grid Name="MainGrid">
        <JediTournamentWPF:CtrlJedis x:Name="jedisController" HorizontalAlignment="Left" VerticalAlignment="Top" Height="Auto" Width="Auto"/>
    </Grid>
</Window>
