@model JediWebSiteApplication.Models.SubModels.TournoiAvailableContentModel

@{
    ViewBag.Title = "Création d'un tournoi";
}

@section Content {
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Nom, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nom)
                @Html.ValidationMessageFor(model => model.Nom)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SelectedMatch1, "Premier Quart de Finale", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectedMatch1, Model.Matchs, Model.DefaultMatch)
                @Html.ValidationMessageFor(model => model.SelectedMatch1)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SelectedMatch2, "Second Quart de Finale", htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectedMatch2, Model.Matchs, Model.DefaultMatch)
                @Html.ValidationMessageFor(model => model.SelectedMatch2)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SelectedMatch3, "Troisième Quart de Finale", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectedMatch3, Model.Matchs, Model.DefaultMatch)
                @Html.ValidationMessageFor(model => model.SelectedMatch3)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SelectedMatch4, "Quatrième Quart de Finale", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectedMatch4, Model.Matchs, Model.DefaultMatch)
                @Html.ValidationMessageFor(model => model.SelectedMatch4)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Créer" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Revenir à la liste", "Index", null, null, null, "content", null, null)
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
