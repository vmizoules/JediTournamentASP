@model JediWebSiteApplication.Models.RegisterViewModel
@{
    ViewBag.Title = "S’inscrire";
    ViewBag.SubTitle = "Créer un nouveau compte !";
}


<!-- Modal -->
<div id="myModal" class="modal fade in" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {

            <div class="modal-header">
                <h4 class="modal-title">@ViewBag.Title</h4>
            </div>
            <div class="modal-body">
                <p>
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                    <div class="centered">
                        <div class="form-group">
                            @Html.LabelFor(m => m.UserName, new { @class = "col-md-4 control-label" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })
                            <div class="col-md-6">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label" })
                            <div class="col-md-6">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </p>
            </div>
                
            <div class="modal-footer">
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-4">
                        <input type="submit" class="btn btn-default" value="S'enregistrer" />
                    </div>
                </div>
            </div>
            }

        </div>

    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(function () {

            //open modal
            $('.modal').modal('show');

            // reopen when btn click
            $(".btn-register").click(function () {
                    $('.modal').modal('show');
                }
            );
        });
        
    </script>
}
